                .atk-cell.atk-expand.atk-text-nowrap
                    a(href="{page}contact{/}").atk-padding-small Contact
                    
    .atk-layout-row.atk-swatch-gray
        .atk-layout-cell
            .atk-wrapper.atk-align-center.atk-padding

    .atk-layout-row.atk-swatch-ink
        .atk-layout-cell
            .atk-wrapper.atk-cells
                .atk-cell.atk-expand
                    ul.atk-menu-horizontal
                        li
                            a(href="{page}about{/}").atk-padding-small About Me 
                        li
                            a(href="{page}blog{/}").atk-padding-small Blog
                        li
                            a(href="{page}open-source{/}").atk-padding-small Open Source
                        li
